{
	"tabWidth": 2,
	"useTabs": true,
	"printWidth": 80,
	"singleQuote": true,
	"trailingComma": "es5",
	"bracketSpacing": true,
	"bracketSameLine": false,
	"semi": true,
	"arrowParens": "always",
	"plugins": ["prettier-plugin-astro", "@trivago/prettier-plugin-sort-imports"],
	"importOrder": ["^[./]"],
	"importOrderSeparation": false,
	"importOrderSortSpecifiers": true,
	"overrides": [
		{
			"files": "*.astro",
			"options": {
				"parser": "astro"
			}
		}
	]
}
