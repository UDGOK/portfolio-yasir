---
import PageLayout from '@layouts/PageLayout.astro';
import SectionLayout from '@layouts/SectionLayout.astro';
import Hero from '@components/Hero.tsx';
import Skills from '@components/Skills.tsx';
import Projects from '@components/Projects.tsx';
import * as emoji from 'node-emoji';
---

<PageLayout title="Antonio Granaldi" subtitle="Full-Stack Web Developer">
	<Hero client:load />
	<SectionLayout
		title="Skills"
		subtitle={`Here's what I bring to the table ${emoji.emojify(':hammer_and_pick:')}`}
	>
		<Skills client:load />
	</SectionLayout>
	<SectionLayout
		title="Projects"
		subtitle={`Explore my web development journey ${emoji.emojify(':airplane:')}`}
	>
		<Projects client:load />
	</SectionLayout>
</PageLayout>
